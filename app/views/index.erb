<h2 class="center-align cyan-text text-darken-2">All Tasks</h1>

<article class="center-align">
  <% @tasks.each do |task| %>
    <section class="row">
       <div class="col s12 m12">
         <div class="card blue lighten-3 z-depth-2">
           <div class="card-content white-text">
             <span class="card-title"><%= task.title %></span>
           </div>
           <div class="card-action indigo">
             <a class="btn-flat" href="/tasks/<%= task.id %>">View</a>
             <a class="btn-flat" href="/tasks/<%= task.id %>/edit">Edit</a>
             <form class="waves-effect waves-teal btn-flat green-text text-accent-3" action="/tasks/<%= task.id %>" method="POST">
               <input type="hidden" name="_method" value="DELETE"/>
               <input class="hover-submit" type="submit" value="delete"/>
             </form>
           </div>
         </div>
       </div>
     </section>
  <% end %>
</article>
